import App.Models.Comments
import qualified Network.URI as URI



create :: Controller ()
create = do id' <-getSetting_u "id" :: Controller String
            body_ <- getParam_u "content"
            author_ <- getParam_u "author"
            let pId = (Prelude.read id')::Int64
            comment_id <- insert( Comments{author= author_ , body=body_ , postId=pId}) False
            redirectTo $ "/Posts/Show/"++id'
